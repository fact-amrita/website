generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UserCredential {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  RegisterDate String?
  email        String  @unique
  image        String?
  name         String
  provider     String?
  role         String?
}

model ExistingMembersList {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String? @unique
  name  String?
}

model User {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  RegisterDate String
  email        String  @unique
  image        String?
  name         String
  role         String
  FactID       String  @unique
  domain       String
  phone        BigInt?
  birthday     String?
  linkedInURL  String?
  githubURL    String?
  About        String?
  skills       String[]
}

model Tasks {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  TaskId      String  @unique
  task        String
  file        String?
  description String
  points      Int
  domain      String
  startDate   String
  deadline    String
  duration    String
}

model Tickets {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  TicketId      String  @unique
  TicketType    String
  TicketContent String
  FactID        String
  DateTime      BigInt
  cleared       Boolean
}

model Points {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  FactID         String          @unique
  points         Int
  domain         String
  completedTasks CompletedTask[]
  pendingTasks   PendingTask[]
}

model CompletedTask {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  taskId   String
  awarded  Int
  pointsId String @db.ObjectId
  points   Points @relation(fields: [pointsId], references: [id])
}

model PendingTask {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  taskId    String
  startTime DateTime
  pointsId  String   @db.ObjectId
  points    Points   @relation(fields: [pointsId], references: [id])
}
