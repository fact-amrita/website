generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UserCredential {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  RegisterDate String?
  email        String  @unique
  image        String?
  name         String
  provider     String?
  role         String?
}

model ExistingMembersList {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String? @unique
  name  String?
}

model User {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  RegisterDate String
  email        String  @unique
  image        String?
  name         String
  role         String
  FactID       String  @unique
  domain       String
  semester     String
  phone        BigInt?
  birthday     String?
  linkedInURL  String?
  githubURL    String?
  About        String?
  ReactExp     String?
  NodeExp      String?
  HTMLCSSExp   String?
  PythonExp    String?
  JSExp        String?
  Title        String?
}

model Tasks {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  TaskId      String  @unique
  task        String
  fileKey     String?
  description String
  points      Int
  domain      String
  startDate   String
  deadline    String
  duration    String
  creator     String?
}

model Tickets {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  TicketId      String  @unique
  TicketType    String
  TicketContent String
  FactID        String
  DateTime      BigInt
  cleared       Boolean
}

model Points {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  FactID         String          @unique
  points         Int
  domain         String
  completedTasks CompletedTask[]
  pendingTasks   PendingTask[]
}

model PointsHistory {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  FactID   String
  points   Int
  reason   String
  assigner String
  pointsSemester String
  pointsYear String
}

model CompletedTask {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  taskId             String
  FactID             String
  completeTime       String
  Filekey            String?
  awarded            Int?
  status             String
  submissionYear     String?
  submissionSemester String?
  pointsId           String  @db.ObjectId
  points             Points  @relation(fields: [pointsId], references: [id])
}

model PendingTask {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  taskId    String
  FactID    String
  startTime DateTime
  pointsId  String   @db.ObjectId
  points    Points   @relation(fields: [pointsId], references: [id])
}

model Announcements {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  Announcement String
  Visiblefrom  String
  VisibleTill  String
}

model Timeline {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  Date        String
  Title       String
  description String?
  link        String?
}

model Events {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  Description String
  Link        String
  Visiblefrom String
  VisibleTill String
}
